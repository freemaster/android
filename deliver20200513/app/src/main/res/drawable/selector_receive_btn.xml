<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item  android:state_selected="true"          >

        <layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

            <item
                android:bottom="0dp"
                android:left="-5dp"
                android:right="-5dp"
                android:top="-5dp">
                <shape android:shape="rectangle" >
                    <stroke
                        android:width="4dp"
                        android:color="#ce2029" />

                    <solid android:color="@color/color_white_dark" />
                </shape>
            </item>

        </layer-list>

    </item>


    <item android:drawable="@color/color_gray_light" />
</selector>