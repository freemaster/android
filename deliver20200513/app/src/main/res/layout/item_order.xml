<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_layout"
    android:layout_width="match_parent"
    android:layout_height="110dp"

    android:background="#B1B0B0"

    android:orientation="vertical"
    android:paddingBottom="1dp"


    >

    <LinearLayout
        android:id="@+id/item_back_lay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"

        android:background="@color/color_gray_dark"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        >

        <!-- item order & adver -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="27"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="0dp">

            <LinearLayout
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:orientation="vertical">


                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <!--
                                    <ImageView
                                        android:id="@+id/itme_head_image"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:scaleType="fitXY"
                                        app:srcCompat="@drawable/ic_tiem_order_ring" />
                                        -->

                    <ImageView
                        android:id="@+id/itme_head_image"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_tiem_order_ring"
                        />




                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView52"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="30" />

                        <TextView
                            android:id="@+id/pass_time_tv"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="25"
                            android:gravity="center"

                            android:text="5분 30초"
                            android:textSize="14dp" />

                        <TextView
                            android:id="@+id/require_time_tv"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="30"
                            android:gravity="center"

                            android:text="15분"
                            android:textColor="#FFFFFF"
                            android:textSize="14dp" />

                        <TextView
                            android:id="@+id/textView53"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="15" />

                    </LinearLayout>
                </FrameLayout>
            </LinearLayout>
        </LinearLayout>











        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="73"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="30"
                android:orientation="horizontal"
                >


                <ImageView
                    android:id="@+id/cart_ic"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_add_shopping_cart_white_24dp"

                    android:background="@drawable/btn_gray"

                    android:paddingLeft="3dp"
                    android:paddingRight="3dp"
                    android:visibility="gone"
                    />

                <TextView
                    android:id="@+id/order_store"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="7"

                    android:text="Store"
                    android:textSize="17dp"
                    android:textColor="@color/color_white"
                    android:textStyle="bold"
                    android:gravity="center_vertical"
                    android:paddingLeft="5dp"/>

                <TextView
                    android:id="@+id/order_datetime"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"

                    android:text="Store"
                    android:textSize="12dp"
                    android:textColor="@color/color_white"

                    android:gravity="right"/>

            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="45"

                android:orientation="horizontal"
                >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="8"

                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/addr_eroad"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"

                        android:gravity="center_vertical"
                        android:text="Address"
                        android:textColor="#ECE3BD"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/addr_eland"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"

                        android:gravity="center_vertical"
                        android:text="Address"
                        android:textColor="@color/color_gray_light"
                        android:textSize="13dp" />

                </LinearLayout>


            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="25"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/box_border_blue">

                    <TextView
                        android:id="@+id/order_distance_"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"

                        android:paddingLeft="7dp"
                        android:paddingRight="7dp"
                        android:text="거리"
                        android:textColor="@color/color_gray_light"
                        android:textSize="12dp" />


                    <TextView
                        android:id="@+id/order_distance"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        android:gravity="center"
                        android:text="Km"
                        android:textColor="@color/color_white_dark"
                        android:textSize="12dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/box_border_red">

                    <TextView
                        android:id="@+id/order_delivery_pay_"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"


                        android:gravity="center"
                        android:paddingLeft="7dp"
                        android:paddingRight="7dp"
                        android:text="배달"
                        android:textColor="@color/color_gray_light"
                        android:textSize="12dp" />

                    <TextView
                        android:id="@+id/order_delivery_pay"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        android:gravity="center"
                        android:text="원"
                        android:textColor="@color/color_white_dark"
                        android:textSize="12dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5">


                    <TextView
                        android:id="@+id/order_pay_type"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        android:gravity="center"
                        android:text=""
                        android:textColor="@color/color_white"
                        android:textSize="14dp" />

                </LinearLayout>


            </LinearLayout>

        </LinearLayout>



    </LinearLayout>


</LinearLayout>