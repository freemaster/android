<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_layout"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:background="@drawable/order_border"
    android:orientation="horizontal"

    >
    <!-- item order & adver -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="27"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="0dp">

        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:orientation="vertical">


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

<!--
                <ImageView
                    android:id="@+id/itme_head_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/ic_tiem_order_ring" />
                    -->

                <ImageView
                    android:id="@+id/itme_head_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_tiem_order_ring"
                    />




                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView52"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="30" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="25"
                        android:gravity="center"

                        android:text="5분 30초"
                        android:textSize="14dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="30"
                        android:gravity="center"

                        android:text="15분"
                        android:textColor="#FFFFFF"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/textView53"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="15" />

                </LinearLayout>
            </FrameLayout>
        </LinearLayout>
    </LinearLayout>











    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="73"
        android:orientation="vertical">

        <TextView
            android:id="@+id/order_store"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="30"
            android:text="Store"
            android:textSize="16dp"
            android:textStyle="" />

        <TextView
            android:id="@+id/order_eaddr"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="45"
            android:text="Address"
            android:textSize="13dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="25"
            android:orientation="horizontal">


            <!-- 배달료 -->

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
            <TextView
                android:id="@+id/order_price1_head"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"

                android:background="@drawable/box_border_blue"
                android:gravity="center"

                android:text="배달료"
                android:textColor="#002e73"
                android:textSize="10dp"
                android:paddingRight="7dp"
                android:paddingLeft="7dp"/>


            <TextView
                android:id="@+id/order_price1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="43"
                android:gravity="center"
                android:text="원"
                android:textSize="14dp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

            <TextView
                android:id="@+id/order_price2_head"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"

                android:background="@drawable/box_border_red"
                android:gravity="center"
                android:text="현 금"
                android:textColor="#a40000"
                android:textSize="10dp"
                android:paddingLeft="7dp"
                android:paddingRight="7dp"/>

            <TextView
                android:id="@+id/order_price2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:gravity="center"
                android:text="원"
                android:textSize="14dp" />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>