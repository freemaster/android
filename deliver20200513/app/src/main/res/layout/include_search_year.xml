<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:id="@+id/search_box"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"

    android:gravity="center"
    android:background="@color/color_gray_dark"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_back_find"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageButton
            android:id="@+id/prev_month_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/color_back_none"
            android:src="@drawable/ic_navigate_before_white_24dp" />

        <Space
            android:layout_width="30dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/search_date_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text=""
            android:textColor="@color/color_text_find"
            android:textSize="16dp"
            android:textStyle="bold" />

        <Space
            android:layout_width="30dp"
            android:layout_height="wrap_content" />

        <ImageButton
            android:id="@+id/next_month_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/color_back_none"
            android:src="@drawable/ic_navigate_next_white_24dp" />

        <Space
            android:layout_width="30dp"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/this_month_btn"
            android:layout_width="80dp"
            android:layout_height="42dp"
            android:background="@color/color_back_find"

            android:text="이번달"
            android:textColor="@color/color_text_find" />
    </LinearLayout>
</LinearLayout>


