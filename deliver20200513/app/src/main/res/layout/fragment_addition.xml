<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_gray"

    >


    <LinearLayout
        android:id="@+id/user_select_lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="0dp"
        android:background="#d2d2d2"
        >

        <Button
            android:id="@+id/rider_btn"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="기  사"
            android:layout_marginRight="1dp"
            android:background="@drawable/selector_receive_btn"
            />

        <Button
            android:id="@+id/branch_btn"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="지  점"
            android:layout_marginRight="1dp"
            android:background="@drawable/selector_receive_btn"
            />


    </LinearLayout>







    <LinearLayout
        android:id="@+id/body"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="5dp">


        <LinearLayout
            android:id="@+id/part1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/color_gray_dark">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="30"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/rider_iv"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:foreground="@drawable/select_circle_rider"
                        android:background="@drawable/ic_person_black_24dp"
                         />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="30"
                    android:orientation="vertical"
                    android:gravity="top"

                    android:padding="5dp"


                    >

                    <TextView
                        android:id="@+id/parent_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="parent"
                        android:textColor="@color/color_white"
                        android:textSize="12dp" />

                    <TextView
                        android:id="@+id/id_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ID"
                        android:textSize="16dp"
                        android:textColor="@color/color_yellow"/>

                    <TextView
                        android:id="@+id/name_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="NAME"
                        android:textSize="14dp"
                        android:textColor="@color/color_white"/>

                    <TextView
                        android:id="@+id/box_id_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Box_ID"
                        android:textSize="12dp"
                        android:textColor="@color/color_white"/>



                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="40"
                    android:orientation="vertical"
                    android:gravity="top">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="5dp"

                        >
                        <TextView
                            android:id="@+id/textView91"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="수행건"
                            android:textColor="@color/color_white"
                            />

                        <TextView
                            android:id="@+id/count_tv"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textColor="@color/color_white"/>
                    </LinearLayout>



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="5dp"
                        >

                        <TextView
                            android:id="@+id/textView90"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="오늘수익"
                            android:textColor="@color/color_white"
                            />

                        <TextView
                            android:id="@+id/revenue_tv"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textColor="@color/color_white"/>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="5dp">
                        <TextView
                            android:id="@+id/textView89"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="예치금"
                            android:textColor="@color/color_white"/>

                        <TextView
                            android:id="@+id/deposit_tv"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textColor="@color/color_white"/>

                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/attend_lay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/color_gray_dark_light"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"

                >

                <TextView
                    android:id="@+id/datetime_tv"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="40"
                    android:textColor="@color/color_white"
                    android:gravity="center"
                    />


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="60"
                    android:orientation="horizontal"
                    android:gravity="center"
                    >



                    <Button
                        android:id="@+id/go_work_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"

                        android:text="일 시작할께요"

                        android:textSize="16dp"


                        />




                    <Button
                        android:id="@+id/go_home_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:text="일 그만할께요"

                        android:textSize="16dp"

                        />

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <Button
                android:id="@+id/rider_deposit_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/ic_set_driver_info"
                android:text="예치금" />

            <Button
                android:id="@+id/get_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"

                android:drawableTop="@drawable/ic_set_withdraw"
                android:text="환급"

                />

            <Button
                android:id="@+id/put_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"

                android:drawableTop="@drawable/ic_deposit_manage"
                android:text="충전"

                />


        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
        android:orientation="horizontal"
            android:gravity="center"
       >


            <Button
                android:id="@+id/rider_box_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/ic_set_adver_box"
                android:text="디디박스 요금" />

            <Button
                android:id="@+id/rider_lte_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/ic_sales_stats"
                android:text="LTE요금"
                android:visibility="gone"/>


            <Button
                android:id="@+id/box_update_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/ic_set_adver_box"
                android:text="박스 업데이트"
                android:visibility="gone"/>




        </LinearLayout>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center" >


            <Button
                android:id="@+id/mgr_store_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/ic_set2_store_manage"
                android:text="상점현황"

                />

            <Button
                android:id="@+id/mgr_rider_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/ic_set2_driver_manage"
                android:text="기사현황" />

            <!--
            <Button
                android:id="@+id/branch_info"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="7dp"

                android:layout_weight="1"
                android:background="@drawable/btn_set_r"
                android:drawableTop="@drawable/ic_set2_branch_info"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:text="회사정보" />
                -->

            <!--
            <Button
                android:id="@+id/branch_mgr_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="fill"
                android:layout_columnWeight="1"
                android:drawableTop="@drawable/ic_set2_branch_set"
                android:text="영업형태설정" />
                -->

        </LinearLayout>


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">


    <Button
        android:id="@+id/mgr_cost_mgr_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:drawableTop="@drawable/ic_set2_deposit_manage_mgr"
        android:text="관리비" />

    <Button
        android:id="@+id/mgr_cost_box_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:drawableTop="@drawable/ic_set2_deposit_manage_mgr"
        android:text="박스할부금" />

    <Button
        android:id="@+id/mgr_cost_lte_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:drawableTop="@drawable/ic_set2_deposit_manage_mgr"
        android:text="LTE요금"
        android:visibility="gone"/>


</LinearLayout>





        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            >

            <Button
                android:id="@+id/setting_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/ic_set_setting"
                android:text="환경설정" />

            <Button
                android:id="@+id/myinfo_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"

                android:drawableTop="@drawable/ic_set_driver_info"
                android:text="내정보" />

            <Button
                android:id="@+id/board_open"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"

                android:drawableTop="@drawable/ic_set_board"
                android:text="게시판" />
        </LinearLayout>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="horizontal">

            <Button
                android:id="@+id/logout_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/btn_login"
                android:text="로그아웃"
                android:textColor="@color/color_white"/>
        </LinearLayout>


    </LinearLayout>


</LinearLayout>