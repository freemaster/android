<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ReceiveActivity"
    android:orientation="vertical">


    <!-- Header             -->
    <include  layout="@layout/header"  />


    <!-- Body -->
    <LinearLayout
        android:id="@+id/body"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#e5e5e5"
        android:gravity="center"
        android:orientation="vertical">


        <!--  part1   -->

        <LinearLayout
            android:id="@+id/part1"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:layout_weight="30"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="5dp"

                >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="40"
                    android:background="#FFFFFF"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/box_border_gray_light"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imageView2"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="70"
                            android:padding="18dp"
                            app:srcCompat="@drawable/ic_time_pass_detail" />

                        <TextView
                            android:id="@+id/pass_time_tv_"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="30"

                            android:gravity="center"
                            android:text="11분 경과" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/box_border_gray_light"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imageView3"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="70"
                            android:padding="18dp"
                            app:srcCompat="@drawable/ic_time_require_detail" />

                        <TextView
                            android:id="@+id/require_time_tv_"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="30"

                            android:gravity="center"
                            android:text="15분 요청" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="60"
                    android:background="#FFFFFF"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/box_border_gray_light"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"

                            android:gravity="center"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/textView40"
                                android:layout_width="40dp"
                                android:layout_height="wrap_content"
                                android:background="@drawable/box_border_blue"
                                android:gravity="center"
                                android:padding="3dp"
                                android:text="접수"
                                android:textColor="#0000FF" />

                            <TextView
                                android:id="@+id/textView39"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="end"
                                android:text="4,000원"
                                android:textSize="16dp" />

                            <TextView
                                android:id="@+id/textView43"
                                android:layout_width="80dp"
                                android:layout_height="wrap_content"
                                android:gravity="end"
                                android:text="[예치금지불]" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/textView42"
                                android:layout_width="40dp"
                                android:layout_height="wrap_content"
                                android:background="@drawable/box_border_red"
                                android:gravity="center"
                                android:padding="3dp"
                                android:text="카드"
                                android:textColor="#FF0000" />

                            <TextView
                                android:id="@+id/textView41"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="end"
                                android:text="50,000원"
                                android:textSize="16dp" />

                            <TextView
                                android:id="@+id/textView44"
                                android:layout_width="80dp"
                                android:layout_height="wrap_content"
                                android:gravity="end"
                                android:text="-" />
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>


        <!-- 테이블 -->
        <LinearLayout
            android:id="@+id/part2_info"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="70"
            android:orientation="vertical"
            android:padding="5dp"

            android:visibility="visible">


            <LinearLayout
                android:id="@+id/info_table"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/line_top"
                android:orientation="vertical"
                android:paddingTop="2dp">


                <LinearLayout
                    android:id="@+id/store"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginBottom="@dimen/info_margin_bottom"
                    android:layout_weight="18"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/receive_store_headTV"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="20"
                        android:background="@color/colorInfo_head"
                        android:gravity="center"
                        android:text="가맹점"
                        android:textSize="18dp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="80"
                        android:background="@color/colorInfo_text"
                        android:gravity="right"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/receive_storeTV"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:paddingLeft="@dimen/info_text_paddingLeft"
                            android:text="가맹정 이름"
                            android:textSize="18dp" />

                        <Button
                            android:id="@+id/call_store_btn"
                            android:layout_width="70dp"
                            android:layout_height="35dp"
                            android:background="@drawable/select_phone_navy"
                            android:drawableLeft="@drawable/ic_phone_blue"

                            android:paddingLeft="6dp"
                            android:paddingRight="6dp"
                            android:text="전화"

                            android:textColor="@color/color_blue"
                            android:textSize="14dp"
                            android:visibility="gone"

                            />

                        <Button
                            android:id="@+id/note_store_btn"
                            android:layout_width="70dp"
                            android:layout_height="35dp"
                            android:layout_marginLeft="4dp"
                            android:background="@drawable/select_phone_navy"

                            android:drawableLeft="@drawable/ic_note_blue"
                            android:paddingLeft="6dp"
                            android:paddingRight="6dp"
                            android:text="쪽지"
                            android:textColor="@color/color_blue"
                            android:textSize="14dp"

                            android:visibility="gone"

                            />

                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/s_addr"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginBottom="@dimen/info_margin_bottom"
                    android:layout_weight="22"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/sAddr_headTV"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="20"
                        android:background="@color/colorInfo_head"
                        android:gravity="center"
                        android:text="출발지"
                        android:textSize="18dp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="80"
                        android:background="@color/colorInfo_text"
                        android:gravity="right"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:paddingLeft="5dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <!--
                                <TextView
                                    android:id="@+id/sAddr_road"
                                    android:layout_width="28dp"
                                    android:layout_height="wrap_content"

                                    android:background="@drawable/box_border_pink"
                                    android:gravity="center"
                                    android:padding="1dp"
                                    android:text="도로"
                                    android:textColor="#FFFFFF"
                                    android:textSize="14dp" /> -->

                                <TextView
                                    android:id="@+id/sAddrTV"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:gravity="center_vertical"
                                    android:paddingLeft="@dimen/info_text_paddingLeft"
                                    android:text="출발지 내용"
                                    android:textSize="14dp" />
                            </LinearLayout>

                        </LinearLayout>

                        <Button
                            android:id="@+id/sAddr_copyBtn"
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:text="복사"
                            android:visibility="gone" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/e_addr"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginBottom="@dimen/info_margin_bottom"
                    android:layout_weight="22"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/eAddr_headTv"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="20"
                        android:background="@color/colorInfo_head"
                        android:gravity="center"
                        android:text="도착지"
                        android:textSize="18dp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="80"
                        android:background="@color/colorInfo_text"
                        android:gravity="right"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:paddingLeft="5dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="horizontal">


                                <TextView
                                    android:id="@+id/eAddrTV"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:gravity="center_vertical"
                                    android:paddingLeft="@dimen/info_text_paddingLeft"
                                    android:text="도착지 내용"
                                    android:textSize="16dp" />

                            </LinearLayout>
                        </LinearLayout>


                        <Button
                            android:id="@+id/eAddr_copyBtn"
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:text="복사"
                            android:visibility="gone" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/distance"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginBottom="@dimen/info_margin_bottom"
                    android:layout_weight="15"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/distance_headTV"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="20"
                        android:background="@color/colorInfo_head"
                        android:gravity="center"
                        android:text="거리"
                        android:textSize="18dp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="80"
                        android:background="@color/colorInfo_text"
                        android:gravity="right"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/receive_distanceTV"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:paddingLeft="@dimen/info_text_paddingLeft"
                            android:text="거리정보"
                            android:textSize="14dp" />

                        <Button
                            android:id="@+id/open_mapBtn"
                            android:layout_width="90dp"
                            android:layout_height="35dp"
                            android:background="@drawable/select_map_point_red"
                            android:drawableLeft="@drawable/ic_map_point_red"

                            android:paddingLeft="6dp"
                            android:paddingRight="6dp"

                            android:text="지도보기"
                            android:visibility="gone"

                            />

                        <Button
                            android:id="@+id/open_TmapBtn"
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:text="T맵"
                            android:visibility="gone" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/c_phone"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginBottom="@dimen/info_margin_bottom"
                    android:layout_weight="15"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView32"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="20"
                        android:background="@color/colorInfo_head"
                        android:gravity="center"
                        android:text="고객전화"
                        android:textSize="14dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="80"
                        android:background="@color/colorInfo_text"
                        android:gravity="right"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/customer_phone_tv"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:paddingLeft="@dimen/info_text_paddingLeft"

                            android:text=""
                            android:textSize="14dp" />

                        <Button
                            android:id="@+id/sms_customer_btn"
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:text="문자"
                            android:textSize="11dp" />

                        <Button
                            android:id="@+id/call_customer_Btn"
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:text="전화"
                            android:textSize="11dp" />
                    </LinearLayout>


                </LinearLayout>


                <LinearLayout
                    android:id="@+id/part3_navi"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="15"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#FFFFFF"
                        android:gravity="center"
                        android:orientation="horizontal">


                        <Button
                            android:id="@+id/store_navi"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"

                            android:layout_weight="1"

                            android:background="@drawable/select_phone_btn"

                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"

                            android:text="상점위치"
                            android:textColor="#FFFFFF"


                            />


                        <Button
                            android:id="@+id/epoint_navi"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:layout_weight="1"

                            android:background="@drawable/select_phone_btn"

                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"

                            android:text="도착위치"
                            android:textColor="#FFFFFF"


                            />


                        <Button
                            android:id="@+id/go_navi"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:layout_weight="1"

                            android:background="@drawable/select_phone_btn"

                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"

                            android:text="네비게이션"
                            android:textColor="#FFFFFF"


                            />


                    </LinearLayout>


                </LinearLayout>


                <!--  전화 -->
                <LinearLayout
                    android:id="@+id/part4_call"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="15"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        android:background="#FFFFFF"
                        android:orientation="horizontal"

                        >

                        <TextView
                            android:id="@+id/textView36"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="65"
                            android:gravity="center"
                            android:text="지점전화" />


                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="35"
                            android:gravity="right">


                            <Button
                                android:id="@+id/receive_call"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"

                                android:layout_margin="5dp"

                                android:background="@drawable/select_phone_btn"
                                android:drawableLeft="@drawable/ic_phone_white"
                                android:paddingLeft="10dp"
                                android:paddingRight="10dp"

                                android:text="전 화"
                                android:textColor="#FFFFFF"


                                />

                        </LinearLayout>


                    </LinearLayout>


                </LinearLayout>


                <LinearLayout
                    android:id="@+id/menu_deliver"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="70"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/allocateBtn"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/btn_allocate"
                            android:gravity="center"
                            android:text="배 차"
                            android:textColor="#FFFFFF"
                            android:textSize="20dp"
                            android:visibility="visible" />

                        <Button
                            android:id="@+id/pickupBtn"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#384468"
                            android:gravity="center"
                            android:text="픽 업"
                            android:textColor="#FFFFFF"
                            android:textSize="20dp"
                            android:visibility="gone" />

                        <Button
                            android:id="@+id/payBtn"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"

                            android:background="@drawable/b_allocate_paybtn"
                            android:gravity="center"
                            android:text="결 제"
                            android:textColor="#FFFFFF"
                            android:textSize="20dp"
                            android:visibility="gone" />

                        <Button
                            android:id="@+id/finishBtn"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"

                            android:background="@drawable/b_allocate_paybtn"
                            android:gravity="center"
                            android:text="완 료"
                            android:textColor="#FFFFFF"
                            android:textSize="20dp"
                            android:visibility="gone" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="30"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/cancelBtn"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"

                            android:background="@drawable/btn_cancel"
                            android:text="접수목록"
                            android:textSize="20dp" />
                        <!-- android:background="@drawable/select_cancel_btn"  -->
                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>


        </LinearLayout>


        <!-- adver -->
        <LinearLayout
            android:id="@+id/part2_adver"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="70"
            android:orientation="vertical"
            android:visibility="gone">


            <LinearLayout
                android:id="@+id/adver_table"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/line_top"
                android:orientation="vertical"
                android:paddingTop="2dp">


                <LinearLayout
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/adver_line_height"
                    android:layout_marginBottom="@dimen/info_margin_bottom"

                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/title_headTV"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="26"
                        android:background="@color/colorInfo_head"
                        android:gravity="center"
                        android:text="광고제목"
                        android:textSize="14dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="80"
                        android:background="@color/colorInfo_text"
                        android:gravity="right"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/titleTV"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:paddingLeft="@dimen/info_text_paddingLeft"
                            android:text="광고제목"
                            android:textSize="14dp" />

                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/receiver"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/adver_line_height"
                    android:layout_marginBottom="@dimen/info_margin_bottom"


                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/receiver_headTV"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="26"
                        android:background="@color/colorInfo_head"
                        android:gravity="center"
                        android:text="접수자"
                        android:textSize="14dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="80"
                        android:background="@color/colorInfo_text"
                        android:gravity="right"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/receiverTV"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:paddingLeft="@dimen/info_text_paddingLeft"
                            android:text="접수자"
                            android:textSize="14dp" />

                        <Button
                            android:id="@+id/receiver_callBtn"
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:text="전화"


                            />


                    </LinearLayout>


                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/adver_line_height"
                    android:gravity="center_vertical"
                    android:text="완료조건" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/complete_table"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/line_top"
                android:orientation="vertical"
                android:paddingTop="2dp">


                <LinearLayout
                    android:id="@+id/time"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/adver_line_height"
                    android:layout_marginBottom="@dimen/info_margin_bottom"

                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/time_headTV"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="26"
                        android:background="@color/colorInfo_head"
                        android:gravity="center"
                        android:text="시간"
                        android:textSize="14dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="74"
                        android:background="@color/colorInfo_text"
                        android:gravity="right"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/timeTV"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:paddingLeft="@dimen/info_text_paddingLeft"
                            android:text="시간"
                            android:textSize="14dp" />


                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/move_distance"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/adver_line_height"
                    android:layout_marginBottom="@dimen/info_margin_bottom"

                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/move_dist_headTV"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="26"
                        android:background="@color/colorInfo_head"
                        android:gravity="center"
                        android:text="최소이동거리"
                        android:textSize="14dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="74"
                        android:background="@color/colorInfo_text"
                        android:gravity="right"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/move_distTV"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:paddingLeft="@dimen/info_text_paddingLeft"
                            android:text="최소이동거리"
                            android:textSize="14dp" />


                    </LinearLayout>


                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/comment"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/adver_line_height"
                    android:gravity="center_vertical"
                    android:text="완료조건이 충족되면 자동완료 처리 됩니다." />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/menu_deliver_adver"
                android:layout_width="match_parent"
                android:layout_height="50dp"

                android:orientation="horizontal"
                android:gravity="bottom">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="70"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/m_adver_process"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/btn_allocate"
                        android:gravity="center"
                        android:text="배 차"
                        android:textColor="#FFFFFF"
                        android:textSize="20dp"
                        android:visibility="visible" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="30"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/cancelBtn2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/btn_cancel"
                        android:text="배차목록" />
                    <!-- android:background="@drawable/select_cancel_btn"  -->
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>




        <LinearLayout
            android:id="@+id/menu_manager"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="bottom"
            android:orientation="horizontal"
            android:visibility="gone"
            android:padding="5dp"
            >

            <Button
                android:id="@+id/mgr_driver_assign"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/colorMenuSubBtn"
                android:text="기사배정"
                android:textColor="@color/colorMenuSubTxt" />


            <Button
                android:id="@+id/mgr_driver_change"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/colorMenuSubBtn"
                android:text="기사변경"
                android:textColor="@color/colorMenuSubTxt"
                android:visibility="gone"/>

            <Button
                android:id="@+id/mgr_monitor"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/colorMenuSubBtn"
                android:text="관제"
                android:textColor="@color/colorMenuSubTxt" />

            <Button
                android:id="@+id/mgr_call_share"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/colorMenuSubBtn"
                android:text="콜 공유"
                android:textColor="@color/colorMenuSubTxt" />

            <Button
                android:id="@+id/mgr_order_info_update"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/colorMenuSubBtn"
                android:text="정보변경"
                android:textColor="@color/colorMenuSubTxt" />

            <Button
                android:id="@+id/mgr_order_state_update"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/colorMenuSubBtn"
                android:text="상태변경"
                android:textColor="@color/colorMenuSubTxt" />


        </LinearLayout>


    </LinearLayout>













</LinearLayout>